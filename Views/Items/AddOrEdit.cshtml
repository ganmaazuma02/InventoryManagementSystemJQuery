@model Item

@{ Layout = null; } 

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.ItemId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />
            <input type="hidden" asp-for="DateTimeAdded" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="ItemName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="ItemName" class="form-control" />
                        </div>
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Quantity" class="form-control" />
                        </div>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="ItemDesc" class="control-label"></label>
                        <div class="input-group">
                            <textarea asp-for="ItemDesc" class="form-control" ></textarea>
                        </div>
                        <span asp-validation-for="ItemDesc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block"/>
                </div>
            </div>
        </form>
    </div>
</div>